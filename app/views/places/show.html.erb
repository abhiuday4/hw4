<h1><%= @place["name"] %></h1>


<div class="row">
  <% for entry in @entries %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if entry.uploaded_image.attached? %>
          <%= image_tag entry.uploaded_image, class: "card-img-top", style: "object-fit: cover; height: 200px;" %> <!-- used chatgpt to help format the image to my preferences-->
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <h6 class="card-subtitle mb-2"><%= entry["occurred_on"] %></h6>
          <p class="card-text"><%= entry["description"] %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-dark">New Entry</a>

</p>

<p>
  <a href="/places" class="btn btn-dark">Back to All Places</a>
</p>